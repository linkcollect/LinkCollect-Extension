{
    "name": "LinkCollect",
    "version": "0.1.0",
    "description": "More than A Bookmark",
    "permissions": ["storage", "tabs","scripting","activeTab"],
    "host_permissions": ["https://*.youtube.com/*","https://*.twitter.com/*","https://*.linkedin.com/*","http://*/*","http://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*","https://*.twitter.com/*","https://*.linkedin.com/*","http://*/*","http://*/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
            "assets/bookmark.png"
          ],
        "matches": ["https://*.youtube.com/*","https://*.twitter.com/*","https://*.linkedin.com/*"]
      }
    ],
    "action": {
      "default_title": "PinnBorad",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
  }
  