{
  "name": "LinkCollect",
  "version": "0.1.0",
  "description": "More than A Bookmark",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.twitter.com/*",
    "https://*.linkedin.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "save-current-tab": {
      "suggested_key": "Alt+C",
      "description": "Inject a script on the page"
    },
    "save-all-tabs": {
      "suggested_key": "Alt+A",
      "description": "Inject a script on the page"
    }
  },
  "icons": {
    "16": "favicon.png",
    "19": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.twitter.com/*",
        "https://*.linkedin.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/bookmark.png"],
      "matches": [
        "https://*.youtube.com/*",
        "https://*.twitter.com/*",
        "https://*.linkedin.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "LinkCollect",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
