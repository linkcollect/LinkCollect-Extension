
{
    "name": "LinkCollect",
    "version": "0.1.0",
    "description": "More than A Bookmark",
    "permissions": ["storage", "tabs","scripting","activeTab","contextMenus","notifications"],
    "host_permissions": ["https://*.youtube.com/*","https://*.twitter.com/*","https://*.linkedin.com/*","http://*/*","https://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "icons":{
       "16":"logo.png", 
       "19":"logo.png", 
       "32":"logo.png", 
       "48":"logo.png", 
       "128":"logo.png" 
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*","https://*.twitter.com/*","https://*.linkedin.com/*","http://*/*","https://*/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
            "assets/bookmark.png"
          ],
        "matches": ["https://*.youtube.com/*","https://*.twitter.com/*","https://*.linkedin.com/*"]
      }
    ],
    "action": {
      "default_title": "LinkCollect",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
  }
  